<div class="tabs">
<%= link_to dashboard_path(active: "accepted"), class: 'tab active' do  %>
    <h3>Lessons</h3>
    <p>Accepted</p>

  <% end %>
<%= link_to dashboard_path(active: "pending"), class: 'tab' do  %>
    <h3>Lessons</h3>
    <p>Pending</p>
  <% end %>
  <%= link_to dashboard_path(active: "declined"), class: 'tab' do %>
    <h3>Lessons</h3>
    <p>Declined</p>
  <% end %>

<div class="container">
  <div class="row">
    <% @filtered_bookings.each do  |booking| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= bg_path %>');">
        <div class="card-category"><%= booking.lesson.title %></div>
        <div class="card-description">
          <p><%= booking.booking_time %></p>
          <p><%= booking.status %></p>
        </div>
        <div class="card-price">
          <p><%="DKK #{booking.lesson.price}" %></p>
        </div>
        <div class="card-user">

        </div>

      </div>
    </div>
    <% end %>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @lessons.each do  |lesson| %>
    <div class="col-xs-12 col-sm-4">
      <% if lesson.category == "school" %>
      <% bg_path = image_path 'school.png' %>
      <% elsif lesson.category == "coding" %>
      <% bg_path = image_path 'coding.png' %>
      <% elsif lesson.category == "arts" %>
      <% bg_path = image_path 'arts.png'  %>
      <% end %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= bg_path %>');">
        <%= link_to lesson_path(lesson) do %>
        <div class="card-category"><%= lesson.title %></div>
        <div class="card-description">
          <p><%= lesson.location %></p>
          <p><%= lesson.category %></p>
        </div>
        <div class="card-price">
          <p><%="DKK #{lesson.price}" %></p>
        </div>
        <div class="card-user">

        </div>

      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>

