                <div class="form-wrapper">
                  <%= simple_form_for ([@lesson, @booking])  do |f| %>
                  <%= f.input :booking_time, :label => "Select lesson time" %>
                  <%= f.submit 'Book Now', class: "btn btn-danger" %>
                  <% end %>

                </div>
                <!-- </div> -->
              </div>
            </div>
          </div>
        </div>
      </div>
