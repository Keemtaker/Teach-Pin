

<div class="form-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="form-wrapper">
          <div class="info-form">
            <h1><%= @lesson.title %></h1>
            <h1><%= @lesson.description %></h1>
            <h2>Book a <%= @lesson.category %> lesson</h2>
          </div>
        </div>
      </div>
    <!-- </div> -->
    <div class="container">
