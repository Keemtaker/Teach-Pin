<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Book a <%= @lesson.category %> lesson</h2>
        <div class="form-wrapper">
          <%= simple_form_for ([@lesson, @booking])  do |f| %>
            <%= f.input :booking_time, :label => "Select lesson time" %>
            <%= f.submit 'Book Now', class: "btn btn-danger" %>
          <% end %>
        </div>
    </div>
  </div>
</div>

